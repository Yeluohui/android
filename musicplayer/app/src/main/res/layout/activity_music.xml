<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.locfai.musicplayer.music"
    android:orientation="vertical"
    android:background="@drawable/background">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/relativelayout1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gechi"
            android:scaleType="center" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/relativelayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="李白"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff5ffc8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="李荣浩"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:phoneNumber="true"
            android:layout_marginTop="5dp"
            android:textColor="#ffe7ebff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:layout_marginTop="23dp"
            android:src="@drawable/progressbar"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressnow"
            android:layout_alignBottom="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:src="@drawable/progressnow"
            android:layout_marginRight="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/musicmax"
            android:layout_alignBottom="@+id/progressbar"
            android:layout_toEndOf="@+id/progressbar"
            android:layout_marginLeft="20dp"
            android:src="@drawable/time" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playmusic"
            android:src="@drawable/play"
            android:layout_below="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastmusic"
            android:layout_toLeftOf="@id/playmusic"
            android:layout_alignTop="@id/playmusic"
            android:src="@drawable/last"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextmusic"
            android:layout_alignTop="@+id/playmusic"
            android:layout_toRightOf="@id/playmusic"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/next" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favor"
            android:src="@drawable/favour"
            android:layout_marginEnd="29dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/recycle"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>

</LinearLayout>
