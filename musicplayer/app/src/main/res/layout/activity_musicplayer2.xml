<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.locfai.musicplayer.musicplayer2"
    android:id="@+id/relativelayout1"
    android:background="@drawable/background"
    android:visibility="visible">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#00000000"


        android:src="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="李白"
        android:id="@+id/musicname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fffff4ca"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="李荣浩"
        android:id="@+id/singer"
        android:layout_below="@+id/musicname"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfffd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gechi"
        android:layout_marginTop="65dp"
        android:src="@drawable/gechi"
        android:layout_below="@+id/singer"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playmusic"
        android:src="@drawable/play"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/singer"
        android:layout_marginBottom="74dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_toLeftOf="@id/playmusic"
        android:layout_alignTop="@id/playmusic"
        android:src="@drawable/last"
        android:background="#00000000"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/next"
        android:background="#00000000"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/playmusic"
        android:layout_toRightOf="@+id/playmusic"
         android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pause"
        android:src="@drawable/pause"
        android:visibility="invisible"
        android:layout_alignTop="@+id/playmusic"
        android:layout_alignLeft="@+id/playmusic"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favour"
        android:src="@drawable/favour"
        android:layout_alignTop="@+id/favour1"
        android:layout_alignStart="@+id/favour1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favour1"
        android:src="@drawable/favour1"
        android:visibility="invisible"
        android:layout_above="@+id/seekBar"
        android:layout_toEndOf="@+id/progressmax" />

    <SeekBar
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/playmusic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:44"
        android:id="@+id/progresstime"
        android:textColor="#fff3faff"
        android:layout_alignTop="@+id/seekBar"
        android:layout_toStartOf="@+id/seekBar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:00"
        android:id="@+id/progressmax"
        android:layout_alignTop="@+id/seekBar"
        android:layout_toRightOf="@+id/seekBar"
        android:textColor="#fff3faff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycle"
        android:src="@drawable/recycle"
        android:layout_below="@+id/pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>
